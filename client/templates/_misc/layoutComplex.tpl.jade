+ionBody
  +ionSideMenuContainer
    +ionSideMenus
      +ionSideMenu(side="left")
        .bar.bar-header.bar-dark
          h1.title Left Menu
        .content.has-header
          +ionList
            +ionItem(class="item-icon-right")
              +ionIcon(icon="ios-arrow-right")
              | Profile
            +ionItem(class="item-icon-right")
              +ionIcon(icon="ios-arrow-right")
              | Help
    +ionSideMenuContent
      +ionNavBar(class="bar-positive")
      +ionNavView
        +contentFor("headerButtonLeft")
          button.button.button-clear.pull-left(data-ion-menu-toggle="left")
            +ionIcon(icon='navicon')
        +ionView
          +ionContent
            +yield
      +ionFooterBar(class="bar-dark")
        +yield("footer")
